{
  "extends": "./apps/web/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // Test-specific types
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "@vitest/browser/matchers",
      "@testing-library/jest-dom",
      "node"
    ],
    
    // Path mapping for tests
    "baseUrl": ".",
    "paths": {
      "@/*": ["./"],
      "@/apps/*": ["./apps/*"],
      "@/packages/*": ["./packages/*"],
      "@/test-utils": ["./test-utils"],
      "@nutricoach/core-nutrition": ["./packages/core-nutrition/src"],
      "@nutricoach/ui": ["./packages/ui/src"]
    }
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "vitest.config.ts",
    "vitest.setup.*.ts",
    "test-utils/**/*",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage"
  ]
}